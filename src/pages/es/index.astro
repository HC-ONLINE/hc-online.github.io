---
import { getEntry } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";

const entry = await getEntry("pages", "es/home");
if (!entry) throw new Error("Content not found: es/home");
const { Content } = await entry.render();
---

<BaseLayout title={entry.data.title} description={entry.data.description} lang="es">
  <article class="prose prose-lg mx-auto">
    <Content />
  </article>
</BaseLayout>
