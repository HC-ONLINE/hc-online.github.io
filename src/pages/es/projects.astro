---
import { getEntry } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";

const entry = await getEntry("pages", "es/projects");
if (!entry) throw new Error("Content not found: es/projects");
const { Content } = await entry.render();
---

<BaseLayout title={entry.data.title} description={entry.data.description} lang="es">
  <article class="prose prose-lg max-w-none">
    <Content />
  </article>
</BaseLayout>
